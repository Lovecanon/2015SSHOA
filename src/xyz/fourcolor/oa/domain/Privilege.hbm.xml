<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="xyz.fourcolor.oa.domain">

	<class name="Privilege" table="_privilege">
		<id name="id">
            <generator class="native"/>
		</id>
		<property name="name" />
		<property name="url" />
		
		
		<!-- roles属性，本类与Role的多对多 -->
		<set name="roles" table="_role_privilege">
			<key column="privilegeId"></key>
			<many-to-many class="Role" column="roleId"/>
		</set>
		
		<!-- parent属性，本类与Privilege(上级)的多对一 -->
		<many-to-one name="parent" class="Privilege" column="parentId" lazy="false"></many-to-one>
		
		<!-- children属性，本类与Privilege(下级)的一对多 -->
		<set name="children">
			<key column="parentId"></key>
			<one-to-many class="Privilege"/>
		</set>
		
		
	</class>
	
</hibernate-mapping>
